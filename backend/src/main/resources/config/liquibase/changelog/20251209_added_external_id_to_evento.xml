<?xml version="1.1" encoding="utf-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

  <changeSet id="20251209-1-add-external-id-to-evento" author="martin">

    <!-- Agregar columna -->
    <addColumn tableName="evento">
      <column name="external_id" type="bigint"/>
    </addColumn>

    <!-- Crear índice único -->
    <addUniqueConstraint
      tableName="evento"
      columnNames="external_id"
      constraintName="uk_evento_external_id"/>

    <!-- Rollback -->
    <rollback>
      <dropUniqueConstraint
        tableName="evento"
        constraintName="uk_evento_external_id"/>
      <dropColumn tableName="evento" columnName="external_id"/>
    </rollback>

  </changeSet>

</databaseChangeLog>
